<Window x:Class="FrontDeskApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FrontDeskApp"
        mc:Ignorable="d"
        Title="Front Desk" Height="600" Width="1200">
    <Grid>
        <ListView x:Name="ListView1" Height="350" Width="350" Margin="40" PreviewMouseLeftButtonUp="ListViewItem_Clicked">
            <ListViewItem x:Name="Rooms" FontSize="30" HorizontalAlignment="Center" Margin="10">Rooms</ListViewItem>
            <ListViewItem x:Name="Reservations" FontSize="30" HorizontalAlignment="Center" Margin="10">Reservations</ListViewItem>
            <ListViewItem x:Name="CheckIn" FontSize="30" HorizontalAlignment="Center" Margin="10">Check In</ListViewItem>
            <ListViewItem x:Name="CheckOut" FontSize="30" HorizontalAlignment="Center" Margin="10">Check Out</ListViewItem>
            <ListViewItem x:Name="Requests" FontSize="30" HorizontalAlignment="Center" Margin="10">Requests</ListViewItem>
        </ListView>
    </Grid>
</Window>
